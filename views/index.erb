<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <script src="form.js" type="text/javascript"></script>
</head>

<body>
<div class="container">
  <form id="calculate" method="post" action="price" class="needs-validation" novalidate>
    <div class="form-group row">
        <label class="col-form-label col-sm-1">Габариты:</label>
        <input
          type="number"
          min="0"
          maxlength="5"
          id="length"
          name="length"
          class="form-control col-sm-1"
          autocomplete="off"
          placeholder="Д"
          step=any
          required
        >
        <span class="col-form-label">x</span>
        <input
          type="number"
          min="0" maxlength="5"
          id="width"
          name="width"
          class="form-control col-sm-1"
          autocomplete="off"
          placeholder="Ш"
          step=any
          required
        >
        <span class="col-form-label">x</span>
        <input
          type="number"
          min="0"
          maxlength="5"
          id="height"
          name="height"
          class="form-control col-sm-1"
          autocomplete="off"
          placeholder="В"
          step=any
          required
        >
        <span class="col-form-label">м</span>
    </div>

    <div class="form-group row">
      <label for="volume" class="col-form-label col-sm-1">Объем:</label>
      <input
        type="number"
        min="0"
        max="80"
        class="form-control col-sm-1"
        id="volume"
        name="volume"
        autocomplete="off"
        step=any
        required
      >
      <span class="col-form-label">м3</span>
    </div>

    <div class="form-group row">
      <label for="weight" class="col-form-label col-sm-1">Вес:</label>
      <input
        type="number"
        min="0"
        max="20000"
        class="form-control col-sm-1"
        id="weight"
        name="weight"
        autocomplete="off"
        step=any
        required
      >
      <span class="col-form-label">кг</span>
    </div>

    <div class="form-group row">
      <label for="from" class="col-form-label col-sm-1">Откуда:</label>
      <input type="text" class="form-control col-sm-2" id="from" name="from" required>
    </div>

    <div class="form-group row">
      <label for="to" class="col-form-label col-sm-1">Куда:</label>
      <input type="text" class="form-control col-sm-2" id="to" name="to" required>
    </div>

    <div class="form-group row">
      <button type="submit" class="btn btn-primary">Рассчитать</button>
      <div id="result" class="col-form-label" style="padding-left: 16px"></div>
    </div>
  </form>
</div>
</body>
